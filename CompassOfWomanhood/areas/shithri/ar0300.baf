// Shithri present near a seaman on the south.
// level-scaling:
IF
  Global("6W#Shithri_present","AR0300",0)
  XPLT(Player1,161000)
  !InMyArea("6WSHITHRI")
  !InPartyAllowDead("6WSHITHRI")
  !Dead("6WSHITHRI")
THEN
  RESPONSE #100
    SetGlobal("6W#Shithri_present","AR0300",1)
    CreateCreature("6WSHIT08",[3564.3086],SE)
END

IF
  Global("6W#Shithri_present","AR0300",0)
