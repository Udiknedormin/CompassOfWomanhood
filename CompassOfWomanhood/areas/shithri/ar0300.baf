  XPLT(Player1,200000)
  !InMyArea("6WSHITHRI")
  !InPartyAllowDead("6WSHITHRI")
  !Dead("6WSHITHRI")
THEN
  RESPONSE #100
    SetGlobal("6W#Shithri_present","AR0300",1)
    // Shithri has her bonus since lvl 10
    SetGlobal("6W#ShithriGotHalfAttackBonus","GLOBAL",1)
    CreateCreature("6WSHIT09",[3564.3086],SE)
END

